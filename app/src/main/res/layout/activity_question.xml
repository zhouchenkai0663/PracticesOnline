<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.activities.QuestionActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_question_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_question_tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="点击空白查看解析"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/activity_question_dote"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_question_tv_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/cut"
                android:gravity="end|bottom"
                android:padding="15dp"
                android:paddingBottom="15dp"
                android:text="看" />


            <TextView
                android:id="@+id/activity_question_tv_commit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/cut1"
                android:gravity="end|bottom"
                android:padding="15dp"
                android:paddingBottom="15dp"
                android:text="交" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>